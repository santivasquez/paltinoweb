               <h2 class="form-signin-heading">Inicio de sesión</h2>
                <label for="inputEmail" class="sr-only">Correo</label>
                <%= email_field_tag 'inputEmail', nil, class: 'form-control', placeholder: "Correo electrónico", required: 'true' %> 
                <label for="inputPassword" class="sr-only">Clave</label>
                <%= password_field_tag 'inputPassword', nil, class: 'form-control', placeholder: "Clave", required: 'true' %>
                <br>
                <%= submit_tag 'Entrar', class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </div>
